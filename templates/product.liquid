{% comment %} Simple product page {% endcomment %}

<section class="altum-container" style="padding: 2.5rem 1.25rem 3rem;">
  <div style="
    display:grid;
    grid-template-columns:minmax(0,1.1fr) minmax(0,1fr);
    gap:2rem;
  ">
    <div>
      {% if product.media.size > 0 %}
        {% for media in product.media %}
          <div style="margin-bottom:0.75rem;border-radius:1rem;overflow:hidden;background:#000;">
            {{ media | media_tag: image_size: '1024x1024', class: 'altum-product-image' }}
          </div>
        {% endfor %}
      {% endif %}
    </div>

    <div style="align-self:start;">
      <h1 style="font-size:1.6rem;margin-bottom:0.4rem;">{{ product.title }}</h1>

      {% if product.vendor != blank %}
        <p style="font-size:0.85rem;color:#c0c7c5;margin-bottom:0.5rem;">
          {{ product.vendor }}
        </p>
      {% endif %}

      <p style="font-size:1.1rem;color:#e1c89a;margin-bottom:0.75rem;">
        {{ product.price | money }}
        {% if product.compare_at_price > product.price %}
          <span style="text-decoration:line-through;opacity:0.7;margin-left:0.5rem;">
            {{ product.compare_at_price | money }}
          </span>
        {% endif %}
      </p>

      {% form 'product', product %}
        {% unless product.has_only_default_variant %}
          <div style="margin-bottom:1rem;">
            {% for option in product.options_with_values %}
              <label style="display:block;font-size:0.85rem;margin-bottom:0.2rem;">
                {{ option.name }}
              </label>
              <select
                name="options[{{ option.name }}]"
                style="width:100%;padding:0.4rem 0.6rem;border-radius:999px;border:1px solid rgba(255,255,255,0.18);background:#02090c;color:#f4f4f2;margin-bottom:0.6rem;"
              >
                {% for value in option.values %}
                  <option value="{{ value | escape }}">
                    {{ value }}
                  </option>
                {% endfor %}
              </select>
            {% endfor %}
          </div>
        {% endunless %}

        <div style="display:flex;gap:0.6rem;margin-bottom:1rem;align-items:center;">
          <input
            type="number"
            name="quantity"
            value="1"
            min="1"
            style="width:70px;padding:0.4rem 0.5rem;border-radius:999px;border:1px solid rgba(255,255,255,0.18);background:#02090c;color:#f4f4f2;"
          >
          <button
            type="submit"
            style="flex:1;padding:0.55rem 1.4rem;border-radius:999px;border:none;
                   background-image:linear-gradient(135deg,#cfa66a,#1f8ea6);color:#050909;
                   font-size:0.95rem;cursor:pointer;box-shadow:0 12px 24px rgba(0,0,0,0.45);"
          >
            Add to cart
          </button>
        </div>
      {% endform %}

      {% if product.description != blank %}
        <div style="font-size:0.9rem;color:#c0c7c5;margin-top:1.2rem;">
          {{ product.description }}
        </div>
      {% endif %}
    </div>
  </div>
</section>
