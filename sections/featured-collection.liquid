{% comment %}
  ALTUM Featured Collection Section
  Shows products from a selected collection.
{% endcomment %}

<section class="home-products">
  <div class="section-heading">
    <div>
      <h2 class="section-heading__title">
        {{ section.settings.heading }}
      </h2>
      {% if section.settings.subheading != blank %}
        <p class="section-heading__subtitle">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>
  </div>

  {% if section.settings.collection %}
    <div class="product-grid">
      {% for product in section.settings.collection.products limit: section.settings.product_limit %}
        <div class="product-card">
          <a href="{{ product.url }}">
            <div class="product-card__media">
              {% if product.featured_image %}
                <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
              {% else %}
                <div style="background:#eee; height:200px;"></div>
              {% endif %}
            </div>

            <div class="product-card__body">
              <div class="product-card__title">{{ product.title }}</div>
              <div class="product-card__price">
                {{ product.price | money }}
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p>No collection selected.</p>
  {% endif %}
</section>

{% schema %}
{
  "name": "Featured collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Gear & Colorado Candles"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "A curated lineup of pants, portable solar panels, and Colorado-made candles."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select a collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 6,
      "label": "Products to show"
    }
  ],
  "presets": [
    {
      "name": "Featured collection"
    }
  ]
}
{% endschema %}
