<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ page_title }}</title>
    <meta name="description" content="{{ page_description | escape }}">

    {{ content_for_header }}

    {{ 'theme.css' | asset_url | stylesheet_tag }}
  </head>
  <body class="template-{{ template.name | handle }}">
    <div class="site">

      <!-- HEADER -->
      <header class="site-header {% if template.name == 'index' %}site-header--overlay{% endif %}">
        <div class="site-header__inner">

          <!-- Mobile toggle -->
          <button
            class="site-header__toggle"
            type="button"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span></span>
            <span></span>
          </button>

          <!-- Brand -->
          <a href="{{ routes.root_url }}" class="site-header__brand">
            {% if settings.header_logo %}
              <img
                src="{{ settings.header_logo | image_url: width: 200 }}"
                alt="{{ shop.name | escape }}"
              >
            {% endif %}
            <span>Altum</span>
          </a>

          <!-- Navigation -->
          <nav class="site-nav" aria-label="Main navigation">
            <a href="{{ routes.root_url }}">Home</a>

            <div class="site-nav__item site-nav__item--has-mega">
              <a href="/collections/all">Shop</a>
              <div class="mega-menu">
                <div class="mega-menu__column">
                  <h3>Climbing</h3>
                  <a href="/collections/climbing">Climbing gear</a>
                  <a href="/collections/shoes">Approach & climbing shoes</a>
                  <a href="/collections/accessories">Chalk, tape & accessories</a>
                </div>
                <div class="mega-menu__column">
                  <h3>Trail & Hiking</h3>
                  <a href="/collections/hiking">Hiking & trekking</a>
                  <a href="/collections/trail-running">Trail running</a>
                  <a href="/collections/apparel">Outerwear & layers</a>
                </div>
                <div class="mega-menu__column">
                  <h3>Altum Experiences</h3>
                  <a href="/collections/adventures">Guided adventures</a>
                  <a href="/collections/retreats">Retreats & wellness</a>
                  <a href="/pages/gift-card">Gift cards</a>
                </div>
              </div>
            </div>

            <a href="/collections/climbing">Climbing</a>
            <a href="/collections/hiking">Hiking</a>
            <a href="/pages/about">About</a>
          </nav>

          <!-- Header Right -->
          <div class="site-header__right">
            <a href="{{ routes.search_url }}">Search</a>
            <a href="{{ routes.cart_url }}">Cart ({{ cart.item_count }})</a>
          </div>

        </div>
      </header>

      <!-- MAIN CONTENT -->
      <main class="site-main" role="main">
        {{ content_for_layout }}
      </main>

      <!-- FOOTER -->
      <footer class="site-footer">
        <div class="site-footer__inner">
          <div class="site-footer__grid">
            <div>
              <div class="site-footer__heading">Altum</div>
              <p>
                Gear and trips for climbers and outdoor explorers who want
                summit-day performance and five-star basecamp comfort.
              </p>
            </div>
            <div>
              <div class="site-footer__heading">Shop</div>
              <div class="site-footer__links">
                <a href="/collections/all">All products</a>
                <a href="/collections/climbing">Climbing</a>
                <a href="/collections/hiking">Hiking & trail</a>
                <a href="/collections/accessories">Accessories</a>
              </div>
            </div>
            <div>
              <div class="site-footer__heading">Company</div>
              <div class="site-footer__links">
                <a href="/pages/about">About</a>
                <a href="/pages/journal">Journal</a>
                <a href="/pages/contact">Contact</a>
              </div>
            </div>
            <div>
              <div class="site-footer__heading">Support</div>
              <div class="site-footer__links">
                <a href="/policies/shipping-policy">Shipping</a>
                <a href="/policies/refund-policy">Returns</a>
                <a href="/policies/privacy-policy">Privacy</a>
              </div>
            </div>
          </div>

          <div class="site-footer__bottom">
            <span>Â© {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</span>
            <div class="site-footer__social">
              <a href="https://instagram.com" aria-label="Instagram">IG</a>
              <a href="https://youtube.com" aria-label="YouTube">YT</a>
              <a href="https://tiktok.com" aria-label="TikTok">TT</a>
            </div>
          </div>
        </div>
      </footer>

    </div>

    {{ 'theme.js' | asset_url | script_tag }}
  </body>
</html>
