<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ page_title }}</title>
    <meta name="description" content="{{ page_description | escape }}">

    {{ content_for_header }}

    {{ 'theme.css' | asset_url | stylesheet_tag }}
  </head>
  <body>
    <div class="site">
      <header class="site-header">
        <div class="site-header__inner">
          <a href="{{ routes.root_url }}" class="site-header__brand">
            {% if settings.header_logo %}
              <img
                src="{{ settings.header_logo | image_url: width: 200 }}"
                alt="{{ shop.name | escape }}"
              >
            {% endif %}
            <span>Altum</span>
          </a>

          <nav class="site-nav" aria-label="Main navigation">
            <a href="{{ routes.root_url }}">Home</a>
            <a href="/collections/all">Shop</a>
            <a href="/collections/climbing">Climbing</a>
            <a href="/collections/hiking">Hiking</a>
            <a href="/pages/about">About</a>
          </nav>

          <div class="site-header__right">
            <a href="{{ routes.search_url }}">Search</a>
            <a href="{{ routes.cart_url }}">Cart ({{ cart.item_count }})</a>
          </div>
        </div>
      </header>

      <main class="site-main" role="main">
        {{ content_for_layout }}
      </main>

      <footer class="site-footer">
        <div class="site-footer__inner">
          <div class="site-footer__grid">
            <div>
              <div class="site-footer__heading">Altum</div>
              <p>
                Gear and trips for climbers and outdoor explorers who want
                performance on the wall and comfort at basecamp.
              </p>
            </div>
            <div>
              <div class="site-footer__heading">Shop</div>
              <div class="site-footer__links">
                <a href="/collections/all">All products</a>
                <a href="/collections/climbing">Climbing</a>
                <a href="/collections/hiking">Hiking</a>
              </div>
            </div>
            <div>
              <div class="site-footer__heading">Company</div>
              <div class="site-footer__links">
                <a href="/pages/about">About</a>
                <a href="/pages/journal">Journal</a>
              </div>
            </div>
            <div>
              <div class="site-footer__heading">Support</div>
              <div class="site-footer__links">
                <a href="/pages/contact">Contact</a>
                <a href="/policies/refund-policy">Returns</a>
                <a href="/policies/shipping-policy">Shipping</a>
              </div>
            </div>
          </div>

          <div class="site-footer__bottom">
            <span>© {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</span>
            <div class="site-footer__links">
              <a href="/policies/privacy-policy">Privacy</a> ·
              <a href="/policies/terms-of-service">Terms</a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
